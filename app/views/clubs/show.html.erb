

<p id="notice"><%= notice %></p>

<p>
  <strong>サークル名:</strong>
  <%= @club.name %>
</p>

<p>
  <strong>ジャンル:</strong>
  <%= @club.big_genre %>
</p>

<p>
  <strong>カテゴリ:</strong>
  <%= @club.small_genre %>
</p>

<p>
  <strong>活動頻度(1週間あたり):</strong>
  <%= @club.frequency %>
</p>

<p>
  <strong>主な活動場所:</strong>
  <%= @club.place %>
</p>

<p>
  <strong>PR文:</strong>
  <%= @club.pr %>
</p>

<p>
  <strong>イケメン率:</strong>
  <%= @club.face %>
</p>

<p>
  <strong>飲みサー度:</strong>
  <%= @club.drink %>
</p>

<p>
  <strong>人数規模（1学年）:</strong>
  <%= @club.people %>
</p>

<p>
  <strong>Twitter ID:</strong>
  <%= @club.twitter_id %>
</p>

<div>
  <a class="twitter-timeline"
     href="https://twitter.com/<%= @club.twitter_id %>"
     data-width="300"
     data-height="300">
     @<%= @club.twitter_id %>によるツイート
  </a>
</div>


<% if current_club == @club %>
  <%= link_to '編集', edit_club_registration_path %> |
<% end %>

<%= link_to '戻る', clubs_path %>

